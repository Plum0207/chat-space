.flash-box
  .notice
    グループを作成しました
.wrapper
  .chat-side
    .side-header
      .side-header__box
        .side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
          =link_to new_group_path, class: "btn" do
            %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
          =link_to edit_user_path(current_user), class: "btn" do
            %i.fa.fa-cog
    .groups
      = render "group"
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          text-group
        %ul.main-header__left-box__member-list
          Member:
          %li.main-header__left-box__member-list__member
          test-user
      =link_to "Edit", "",class: "main-header__edit-btn"
    .messages
      = render "message"
    .form
      .input-box
        %input#message_content.input-box__text{:name => "message[text]", :placeholder => "type a message", :type => "text"}
        %label.input-box__image{:for => "message_image"}
          %i.fa.fa-image
          %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}
      %input.submit-btn{:type => "submit", :value => "Send"}

